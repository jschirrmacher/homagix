{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Attach",
      "port": 9229,
      "request": "attach",
      "skipFiles": ["<node_internals>/**"],
      "type": "pwa-node"
    },
    {
      "args": [
        "-x",
        ".ts",
        "-r",
        "dotenv-flow/config",
        "--",
        "node_modules/.bin/mocha",
        "-u",
        "bdd",
        "--timeout",
        "999999",
        "--colors",
        "--exit",
        "${workspaceFolder}/server/**/*.test.ts"
      ],
      "internalConsoleOptions": "openOnSessionStart",
      "name": "Backend Tests",
      "program": "${workspaceFolder}/node_modules/.bin/babel-node",
      "request": "launch",
      "skipFiles": ["<node_internals>/**"],
      "type": "pwa-node",
      "env": {
        "NODE_ENV": "test"
      }
    },
    {
      "args": [
        "--",
        "node_modules/.bin/mocha",
        "-u",
        "bdd",
        "--timeout",
        "999999",
        "--colors",
        "${workspaceFolder}/frontend/**/*.test.js"
      ],
      "internalConsoleOptions": "openOnSessionStart",
      "name": "Frontend Tests",
      "program": "${workspaceFolder}/node_modules/.bin/babel-node",
      "request": "launch",
      "skipFiles": ["<node_internals>/**"],
      "type": "pwa-node"
    },
    {
      "args": [
        "-x",
        ".ts",
        "-r",
        "dotenv-flow/config",
        "--",
        "node_modules/.bin/mocha",
        "-u",
        "bdd",
        "--timeout",
        "999999",
        "--colors",
        "${workspaceFolder}/frontend/**/*.test.js",
        "${workspaceFolder}/server/**/*.test.js"
      ],
      "internalConsoleOptions": "openOnSessionStart",
      "name": "All Tests",
      "program": "${workspaceFolder}/node_modules/.bin/babel-node",
      "request": "launch",
      "skipFiles": ["<node_internals>/**"],
      "type": "pwa-node",
      "env": {
        "NODE_ENV": "test"
      }
    },
    {
      "type": "pwa-node",
      "request": "launch",
      "name": "Launch Server",
      "program": "${workspaceFolder}/node_modules/.bin/babel-node",
      "args": [
        "-x",
        ".ts",
        "--inspect",
        "-r",
        "dotenv-flow/config",
        "${workspaceFolder}/server/index.ts"
      ],
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}
