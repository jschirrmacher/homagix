{
  "debug.javascript.suggestPrettyPrinting": true,
  "mochaExplorer.exit": true,
  "mochaExplorer.files": ["frontend/**/*.test.ts", "server/**/*.test.ts"],
  "mochaExplorer.require": ["@babel/register"],
  "mochaExplorer.debuggerConfig": "All Tests",
  "mochaExplorer.esmLoader": true,
  "mochaExplorer.ignore": ["./node_modules"],
  "mochaExplorer.logpanel": true,
  "mochaExplorer.mochaPath": "node_modules/mocha",
  "mochaExplorer.pruneFiles": true,
  "typescript.tsdk": "node_modules/typescript/lib",
  "editor.formatOnSave": true
}
